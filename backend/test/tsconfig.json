{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": false,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "typeRoots": [
      "../node_modules/@types"
    ],
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["../shared/src/*"]
    }
  },
  "include": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "setup.ts",
    "**/__mocks__/*.ts",
    "**/test-utils.ts",
    "../src/**/*.ts",
    "../src/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
